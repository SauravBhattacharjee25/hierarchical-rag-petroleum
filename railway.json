{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python3 -m waitress --port=$PORT --host=0.0.0.0 --threads=4 wsgi:app",
    "restartPolicyMaxRetries": 5
  },
  "env": {
    "GEMINI_API_KEY": ""
  }
}
